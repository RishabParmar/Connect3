            app:srcCompat="@drawable/blue"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="104dp" />

        <ImageView
            android:id="@+id/r02"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
